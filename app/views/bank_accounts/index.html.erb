<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>Bank Accounts</h1>
</section>

<!-- Main content -->
<section class="content">
  <!-- Info boxes -->
  <div class="box box-primary">
    <div class="box-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Account Number</th>
            <th>Client</th>
            <th>Balance</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @bank_accounts.each do |bank_account| %>
          <tr>
            <td><%= bank_account.account_number %></td>
            <td><%= link_to bank_account.client, client_path(bank_account.client.id) %></td>
            <td><%= number_to_currency(bank_account.balance, unit: "P") %></td>
            <td><%= link_to "Show", bank_account_path(bank_account.id), :class => "btn btn-primary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
