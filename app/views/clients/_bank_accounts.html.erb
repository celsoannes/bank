<table class="table table-bordered">
  <thead>
    <tr>
      <th>Account Number</th>
      <th>Balance</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% bank_accounts.each do |bank_account| %>
    <tr>
      <td><%= bank_account.account_number %></td>
      <td><%= number_to_currency(bank_account.balance, unit: "P") %></td>
      <td><%= link_to "Show", bank_account_path(bank_account.id), :class => "btn btn-info" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
