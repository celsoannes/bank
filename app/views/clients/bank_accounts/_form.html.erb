<%= simple_form_for [client, bank_account], defaults: { input_html: { class: 'form-control' } } do |f| %>
  <%= f.input :account_number %>
  <hr>
  <div class="form-actions">
    <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
      <% content_tag(:strong, 'Save Bank Account') %>
    <% end %>

    <%= link_to "Cancel", client_path(client.id), :class => "btn btn-default" %>
  </div>
<% end %>
