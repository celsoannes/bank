<%= stylesheet_link_tag 'login', media: 'all' %>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Welcome to BankApp</h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">
                <div class="form-signin">
                  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'form-control' } } ) do |f| %>
                    <%= f.input :login, required: false, autofocus: true, placeholder: 'Login' %>
                    <%= f.input :password, required: false, placeholder: 'Password' %>

                    <div class="form-actions">
                      <%= f.button :submit, "Sign in", class: "btn btn-lg btn-primary btn-block" %>
                    </div>
                  
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
