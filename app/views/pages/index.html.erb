<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>My Bank</h1>
</section>

<!-- Main content -->
<section class="content">
  <!-- Info boxes -->
  <div class="box box-primary">
    <div class="box-body">
      <div class="row">
        <div class="col-md-3">
          <!-- Info boxes -->
          <div class="info-box">
            <span class="info-box-icon bg-aqua">
              <i class="fa fa-gears"></i>
            </span>
            <div class="info-box-content">
              <span class="info-box-text">Number of Accounts</span>
              <span class="info-box-number"><%= number_of_accounts %></span>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <!-- Info boxes -->
          <div class="info-box">
            <span class="info-box-icon bg-aqua">
              <i class="fa fa-gears"></i>
            </span>
            <div class="info-box-content">
              <span class="info-box-text">Number of Clients</span>
              <span class="info-box-number"><%= number_of_clients %></span>
            </div>
          </div>
        </div>
    </div>
  </div>
</section>
